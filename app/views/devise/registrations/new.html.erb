<div class="container-sm text-center">
  <h2>Sign up</h2> <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-3">
        <%= f.label :email %><br/>
      </div>
      <div class="col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %><br>
          <%= custom_error(resource, :email) %>
      </div>
    </div> <br><br>
    
    <div class="row">
      <div class="col-3">
         <%= f.label :password %><br>
      </div>
      <div class="col-6"> 
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %> 
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= custom_error(resource, :password) %>
      </div>
    </div> <br><br>

    <div class="row">
      <div class="col-3">
        <%= f.label :password_confirmation %><br />
      </div>
      <div class="col-6">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %><br>
        <%= custom_error(resource, :password_confirmation) %>
      </div>
    </div> <br><br>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %> 
    </div><br>
  <% end %>

<%= render "devise/shared/links" %>
</div>